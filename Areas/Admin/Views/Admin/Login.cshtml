    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/Style.css" rel="stylesheet">

    <title>Login Page For Admin</title>
</head>
<body>
    <section class="form-01-main">
        <div class="form-cover">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-sub-main">
                            <div class="_main_head_as">
                                <a href="#">
                                    <img src="~/Areas/Admin/Content/images/vector.png">
                                </a>
                            </div>
                            @using (Html.BeginForm("Login", "Admin"))
                            {
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    <input name="TenDN" class="form-control _ge_de_ol" type="text" placeholder="User Name" aria-required="true" required>
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control" name="Matkhau" placeholder="********" required>
                                </div>


                                <div class="form-group">
                                    <div class="btn_uy">
                                        <button type="submit">LOGIN</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

