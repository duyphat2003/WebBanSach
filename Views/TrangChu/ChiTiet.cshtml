@model WebBanSach.Models.SACH
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}

<link rel="stylesheet" href="~/Content/Detail.css" />
<div>
    <a href="@Url.Action("Home", "TrangChu")" class="div-title">Trang chủ</a>&nbsp;&gt;&nbsp;<a href="item" class="div-title">@Model.CHUDE.TenChuDe</a>&nbsp;&gt;&nbsp;<span class="current-title">@ViewBag.Title</span>
</div>
<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">CHI TIẾT SẢN PHẨM</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img style="width: 100%;" src="~/Content/Images/@Model.Hinhminhhoa">
        </div>
        <div class="col-md-6">
            <h4>@Model.Tensach</h4>
            <p style="text-align: justify">
                <span style="font-weight: bold">Thể loại:</span> @Model.CHUDE.TenChuDe
            </p>
            <p class="price">
                Giá bán: <span style="color:red; font-size:24px;">
                    @Model.Dongia đ
                </span>
            </p>
            <a class="btn btn-primary" href="@Url.Action("AddToCart", "Cart", new {id = Model.Masach })">ĐẶT MUA</a>
        </div>
    </div>
</div>


<script>
    var item;
        if (@Model.MaCD == 12) {
            item = @Url.Action("TieuThuyetPage", "SACHes");
        }
        else if (@Model.MaCD == 13) {
            item = @Url.Action("TruyenTranhPage", "SACHes");
        }
        else if (@Model.MaCD == 14) {
            item = @Url.Action("LapTrinhPage", "SACHes");
        }
</script>