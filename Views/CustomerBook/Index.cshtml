@model IEnumerable<WebBanSach.Models.SACH>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}
<link href="~/Content/TieuThuyet.css" rel="stylesheet" />
<link href="~/Content/ProductStylePro.css" rel="stylesheet" />
<div style="margin: 10px auto; width: 90%;">
    <hr />
    <div class="row">
        @foreach (var sach in Model)
        {
            <div class="card" style="width: 18rem;">
                <a href="@Url.Action("ChiTiet","CustomerBook", new {  id = sach.Masach, @class = "btn btn-primary" })">
                    <img src="~/Content/Images/@sach.Hinhminhhoa" class="card-img-top" />
                </a>
                <div class="card-body">
                    <a class="card-text" href="@Url.Action("ChiTiet","CustomerBook", new {  id = sach.Masach, @class = "btn btn-primary" })">
                        @sach.Tensach
                    </a>
                    <h5 class="card-title">@sach.Dongia đ</h5>
                </div>
            </div>
        }
    </div>
</div>

