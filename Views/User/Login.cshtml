
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}

<link rel="stylesheet" href="~/Content/LoginRegister.css" />

<div class="Size-Form">
    <div class="Switch-Section">
        <button class="Size-Btn" id="signUp" style="margin-right: 10px">
            Đăng nhập
        </button>
        <button class="Size-Btn" id="signIn">
            Đăng ký
        </button>
    </div>
    <div class="Type-Section">
        <div class="form-container">
            @using (Html.BeginForm("Login", "Users"))
            {
                @Html.ValidationSummary(true)
                <div>
                    <label for="uname" class="form-label">Tài khoản</label>
                    <input type="text" class="form-control" placeholder="Tên đăng nhập....." name="TenDN">
                </div>
                <div>
                    <label for="pwd" class="form-label">Mật khẩu</label>
                    <input type="password" class="form-control" placeholder="Mật khẩu....." name="Matkhau">
                </div>
                <button type="submit" class="ConfirmBtn">Đăng nhập</button>
            }
        </div>


