@{
    ViewBag.Title = "LoginRegister";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}

<link rel="stylesheet" href="~/Content/LoginRegister.css" />

<div class="Size-Form">
    <div style="text-align: center; font-size:1.2em; display: flex; flex-direction: column; flex-wrap: wrap; vertical-align: middle; color: rgb(255 0 17); font-weight: bolder">@ViewBag.ThongBao</div>
    <div class="container fit-content" id="container">
        <div class="form-container sign-up-container">
            @using (Html.BeginForm("Register", "User"))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <div style="text-align: left; padding: 0px 50px;">
                    <h1 style="text-align: center">Đăng ký</h1>

                    <label for="hoten" style="text-align: left">Họ và tên</label>
                    <input type="text" class="form-user" id="hoten" name="HoTenKH" placeholder="Họ và tên...">

                    <label for="diachi" style="text-align: left">Địa chỉ</label>
                    <input type="text" class="form-user" id="diachi" name="DiachiKH" placeholder="Địa chỉ...">

                    <label for="dienthoai" style="text-align: left">Số điện thoại</label>
                    <input type="tel" class="form-user" id="dienthoai" name="DienthoaiKH" placeholder="Số điện thoại...">

                    <label for="email" style="text-align: left">Email</label>
                    <input type="email" class="form-user" id="email" name="Email" placeholder="Email...">

                    <label for="name" style="text-align: left">Tài khoản</label>
                    <input type="text" class="form-user" id="name" name="TenDN" placeholder="Tài khoản...">

                    <label for="pwd" style="text-align: left">Mật khẩu</label>
                    <input type="password" class="form-user" id="pwd" name="Matkhau" placeholder="Mật khẩu...">

                    <input type="submit" value="Go!">
                </div>
            }
        </div>

        <div class="form-container sign-in-container">
            @using (Html.BeginForm("Login", "User"))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <div style="text-align: left; padding: 0px 50px;">
                    <h1 style="text-align: center">Đăng nhập</h1>

                    <label for="name1" style="text-align: left">Tài khoản</label>
                    <input type="text" class="form-user" id="name1" name="TenDN" placeholder="Tài khoản..." >

                    <label for="pwd1" style="text-align: left">Mật khẩu</label>
                    <input type="password" class="form-user" id="pwd1" name="Matkhau" placeholder="Mật khẩu..." >

                    <input type="submit" value="Go!">
                </div>

            }
        </div>

        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Chào mừng trở lại!</h1>
                    <p>Để mua sách thì đăng nhập nhập nào!</p>
                    <button class="ghost" id="signIn">Đã có tài khoản! Vào đăng nhập thôi</button>
                </div>

                <div class="overlay-panel overlay-right">
                    <h1>Chào người mới!</h1>
                    <p>Hãy đăng ký để mua sách nào!</p>
                    <button class="ghost" id="signUp">Chưa có tài khoản! Vào đăng ký thôi</button>
                </div>

            </div>
        </div>

    </div>
</div>

<script>
    const signUpButton = document.getElementById('signUp');
    const signInButton = document.getElementById('signIn');
    const container = document.getElementById('container');

    signUpButton.addEventListener('click', () => {
        container.classList.add('right-panel-active');
    });

    signInButton.addEventListener('click', () => {
        container.classList.remove('right-panel-active');
    });
</script>
