@using WebBanSach.Models
@model List<CartItem>
@{
    ViewBag.Title = "GetCartInfo";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}
<link rel="stylesheet" href="~/Content/Cart.css"/>
<div class="Order-Board">
    <h2 style="text-align: left">GIỎ HÀNG (@ViewBag.TotalNumber sản phẩm)</h2>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr style="text-transform: uppercase; color: rgb(19 211 238)">
                <th>Mã sách</th>
                <th>Tên sách</th>
                <th>Ảnh sách</th>
                <th>Số lượng sách</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sach in Model)
            {

                <tr>
                    <td>@sach.MaSach</td>
                    <td>
                        <a href="@Url.Action("ChiTiet", "TrangChu", new {id = @sach.MaSach, @class = "btn btn-primary"})" target="_self" style="text-decoration: none; color: rgb(255 0 172);">
                            @sach.TenSach
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Action("ChiTiet", "TrangChu", new {id = @sach.MaSach, @class = "btn btn-primary"})" target="_self" style="text-decoration: none; color: rgb(255 0 172)">
                            <img src="~/Content/Images/@sach.ImageFile" alt="@sach.ImageFile bị lỗi" style="width: 60%" />
                        </a>
                    </td>
                    <td>@sach.Number</td>
                    <td>@sach.Price</td>
                    <td>@sach.Total()</td>
                </tr>
            }
            <tr style="font-weight: bold; text-align: right; color: rgb(255 0 148)">
                <td colspan="5">Tổng số lượng: @ViewBag.TotalNumber</td>
                <td colspan="1">Tổng tiền: @ViewBag.TotalPrice</td>
            </tr>
        </tbody>
    </table>
</div>

