@model IEnumerable<WebBanSach.Models.SACH>
@{
    int from = 0;
    int to = int.MaxValue;
    ViewBag.Price = "Tất cả";
    foreach (var item in Model)
    {
        ViewBag.Topic = item.CHUDE.TenChuDe;
        break;
    }
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}

<link rel="stylesheet" href="~/Content/TieuThuyet.css" />
<link rel="stylesheet" href="~/Content/ProductStylePro.css" />
<div class="div-left-title">
    <div>
        <a href="@Url.Action("Home", "TrangChu")">Trang chủ</a>&nbsp;&gt;&nbsp;<span>@ViewBag.Topic</span>
    </div>
</div>
<div class="div-left-info">
    <div class="Menu-Choice">

        <div class="Title-Choice">GIÁ</div>
        <ul>
            @using (Html.BeginForm("SachTheoChuDe", "SACHes"))
            {
                <li>
                    <input id="0" type="radio" name="select" value="0" checked="checked" onclick="ChoosePrice()">
                    <label for="0">Default</label>
                </li>
                <li>
                    <input id="1" type="radio" name="select" value="1" onclick="ChoosePrice()">
                    <label for="1">0₫ - 150,000₫</label>
                </li>

                <li>
                    <input id="150001" type="radio" name="select" value="150001" onclick="ChoosePrice()">
                    <label for="150001">150,000₫ - 300,000₫</label>
                </li>

                <li>
                    <input id="300001" type="radio" name="select" value="300001" onclick="ChoosePrice()">
                    <label for="300001">300,000₫ - 500,000₫</label>
                </li>

                <li>
                    <input id="500001" type="radio" name="select" value="500001" onclick="ChoosePrice()">
                    <label for="500001">500,000₫ - 700,000₫</label>
                </li>

                <li>
                    <input id="700001" type="radio" name="select" value="700001" onclick="ChoosePrice()">
                    <label for="700001">700,000₫ - Trở lên</label>
                </li>
            }
        </ul>
    </div>
</div>
<div class="container-fluid div-right-product">
    <div style=" margin-top: 10px; margin-bottom: 20px;">CHỌN LỌC: @ViewBag.Price</div>
    <div class="row product">
        @foreach (var item in Model)
        {
            if (item.Dongia >= from && item.Dongia <= to)
            {
                <div class="card" style="width: 18rem; margin: 10px auto; position: relative; left: 13.5px">
                    <a href="@Url.Action("ChiTiet", "TrangChu", new { id = item.Masach, @class = "btn btn-primary" })" target="_self" style="text-decoration: none;">
                        <img src="~/Content/Images/@Html.DisplayFor(modelItem => item.Hinhminhhoa)" alt="@Html.DisplayFor(modelItem => item.Hinhminhhoa) bị lỗi" class="card-img-top" />
                    </a>
                    <div class="card-body">
                        <a class="card-text" href="@Url.Action("ChiTiet", "TrangChu", new { id = item.Masach, @class = "btn btn-primary" })" target="_self" style="text-decoration: none; color: black; font-size: 125%;">
                            @Html.DisplayFor(modelItem => item.Tensach)
                        </a>
                        <h5 class="card-title" style="color: rgb(189, 33, 36); font-weight: bolder; margin-top: 10px;">@Html.DisplayFor(modelItem => item.Dongia)0đ</h5>
                    </div>
                </div>
            }
        }
    </div>
</div>

<script type="text/javascript">
     function ChoosePrice() {
         var checkbox = document.getElementsByName("select");
         for (var i = 0; i < checkbox.length; i++) {
             if (checkbox[i].checked === true) {
                 if (checkbox[i].id == 1) {
                     @{
                         from = 0;
                         to = 150000;
                         ViewBag.Price = 0 + " - " + 150.000 + "₫";
                     }

                 }
                 else if (checkbox[i].id == 150001) {
                     @{
                         from = 150000;
                         to = 300000;
                         ViewBag.Price = 150.000 + " - " + 300.000 + "₫";
                     }
                 }
                 else if (checkbox[i].id == 300001) {
                     @{
                         from = 300000;
                         to = 500000;
                         ViewBag.Price = 300.000 + " - " + 500.000 + "₫";
                     }
                 }
                 else if (checkbox[i].id == 500001) {
                     @{
                         from = 500000;
                         to = 700000;
                         ViewBag.Price = 500.000 + " - " + 700.000 + "₫";
                     }
                 }
                 else if (checkbox[i].id == 700001) {
                     @{
                         from = 700000;
                         to = int.MaxValue;
                         ViewBag.Price = "700.000₫ trở lên";
                     }
                 }

             }
         }
     };
</script>