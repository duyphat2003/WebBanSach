@model WebBanSach.Models.SACH
@{
    ViewBag.Title = "CreateSach";
    Layout = "~/Ares/Admin/Views/Shared/Admin.cshtml";
}
<div class="container-sm">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Sách Mới</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên Sách
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tensach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tensach, "", new { @class = "text-danger" })
            </div>
            Đơn Vị Tính
            <div class="col-md-10">
                @Html.EditorFor(model => model.Donvitinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Donvitinh, "", new { @class = "text-danger" })
            </div>
            Giá
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dongia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dongia, "", new { @class = "text-danger" })
            </div>
            Nội Dung Sách
            <div class="col-md-10">
                <textarea class="form-control text-box single-line" rows="10" cols="100" name="content"></textarea> 
                <span class="field-validation-valid text-danger" data-valmsg-for="content" data-valmsg-replace="true"></span>
            </div>
            Tên Hình Minh họa
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hinhminhhoa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hinhminhhoa, "", new { @class = "text-danger" })
            </div>
            Thể Loại
            <div class="col-md-10">
                 @Html.Action("ChuDePartial", "Admin") <br />
                <input class="form-control text-box single-line" name="tenChuDe" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="tenChuDe" data-valmsg-replace="true"></span>
            </div>
            Nhà Xuất Bản
            <div class="col-md-10">
                @Html.Action("NXBPartial", "Admin") <br />
                <input class="form-control text-box single-line" id="NHAXUATBAN_TenNXB" name="tenNXB" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="tenNXB" data-valmsg-replace="true"></span>
            </div>
            Ngày Cập Nhật
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ngaycapnhat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
            </div>
            Số Lượng Bán
            <div class="col-md-10">
                @Html.EditorFor(model => model.Soluongban, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Soluongban, "", new { @class = "text-danger" })
            </div>
            Số Lượng Xem
            <div class="col-md-10">
                @Html.EditorFor(model => model.solanxem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.solanxem, "", new { @class = "text-danger" })
            </div>
            Tên Tác Giả
            <div class="col-md-10">
                <input class="form-control text-box single-line"  name="tenTG" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="tenTG" data-valmsg-replace="true"></span>
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở lại", "DSSach", null, new { @class = "btn btn-outline-dark" })
    </div>
</div>