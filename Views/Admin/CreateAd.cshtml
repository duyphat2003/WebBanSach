@model WebBanSach.Models.QUANGCAO
@{
    ViewBag.Title = "CreateAd";
    Layout = "~/Ares/Admin/Views/Shared/Admin.cshtml";
}
<div class="container-sm">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Quảng Cáo Mới</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên Công Ty
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenCty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenCty, "", new { @class = "text-danger" })
            </div>
            Tên Ảnh
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hinhminhhoa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hinhminhhoa, "", new { @class = "text-danger" })
            </div>
            Link Ảnh
            <div class="col-md-10">
                @Html.EditorFor(model => model.Href, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Href, "", new { @class = "text-danger" })
            </div>
            Ngày Bắt Đầu
            <div class="col-md-10">
                <input class="form-control text-box single-line" name="dayStart" type="datetime" value="11/25/2022 07:42:00 PM">
                <span class="field-validation-valid text-danger" data-valmsg-for="dayStart" data-valmsg-replace="true"></span>
            </div>
            Ngày Hết Hạn
            <div class="col-md-10">
                <input class="form-control text-box single-line" name="dayEnd" type="datetime" value="11/25/2022 07:42:00 PM">
                <span class="field-validation-valid text-danger" data-valmsg-for="dayEnd" data-valmsg-replace="true"></span>
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở lại", "AdsList", null, new { @class = "btn btn-outline-dark" })
    </div>
</div>