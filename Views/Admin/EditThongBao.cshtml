@model WebBanSach.Models.THONGBAO
@{
    ViewBag.Title = "EditThongBao";
    Layout = "~/Ares/Admin/Views/Shared/Admin.cshtml";
}

<div class="container-sm">
    @using (Html.BeginForm("EditThongBao", "Admin", new { id = Model.ID }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Thông Báo Mới</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Tên Chủ Đề
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="noidung" name="noidung" type="text" value="@Model.Content">
                    <span class="field-validation-valid text-danger" data-valmsg-for="noidung" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
                    <input type="submit" value="Sửa" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

<div>
    @Html.ActionLink("Trở lại", "DSThongBao", null, new { @class = "btn btn-outline-dark" })
</div>
</div>

