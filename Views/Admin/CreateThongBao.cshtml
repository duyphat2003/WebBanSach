@model WebBanSach.Models.THONGBAO
@{
    ViewBag.Title = "CreateThongBao";
    Layout = "~/Ares/Admin/Views/Shared/Admin.cshtml";
}


<div class="container-sm">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Thông Báo Mới</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Nội Dung
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

<div>
    @Html.ActionLink("Trở lại", "DSThongBao", null, new { @class = "btn btn-outline-dark" })
</div>
</div>

