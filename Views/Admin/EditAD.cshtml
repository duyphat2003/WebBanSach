@model WebBanSach.Models.QUANGCAO
@{
    ViewBag.Title = "EditAD";
    Layout = "~/Ares/Admin/Views/Shared/Admin.cshtml";
}

<div class="container-sm">
    @using (Html.BeginForm("EditAD", "Admin", new { id = Model.STT }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Quảng Cáo Mới</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Tên Công Ty
                <div class="col-md-10">
                    <input class="form-control text-box single-line" name="tenCT" type="text" value="@Model.TenCty">
                    <span class="field-validation-valid text-danger" data-valmsg-for="tenCT" data-valmsg-replace="true"></span>
                </div>
                Tên Ảnh
                <div class="col-md-10">
                    <input class="form-control text-box single-line" name="hinhMinhHoa" type="text" value="@Model.Hinhminhhoa">
                    <span class="field-validation-valid text-danger" data-valmsg-for="hinhMinhHoa" data-valmsg-replace="true"></span>
                </div>
                Href
                <div class="col-md-10">
                    <input class="form-control text-box single-line" name="href" type="text" value="@Model.Href">
                    <span class="field-validation-valid text-danger" data-valmsg-for="href" data-valmsg-replace="true"></span>
                </div>
                Ngày Bắt Đầu
                <div class="col-md-10">
                    <input class="form-control text-box single-line" name="dayStart" type="datetime" value="@Model.Ngaybatdau">
                    <span class="field-validation-valid text-danger" data-valmsg-for="dayStart" data-valmsg-replace="true"></span>
                </div>
                Ngày Hết Hạn
                <div class="col-md-10">
                    <input class="form-control text-box single-line" name="dayEnd" type="datetime" value="@Model.Ngayhethan">
                    <span class="field-validation-valid text-danger" data-valmsg-for="dayEnd" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
                    <input type="submit" value="Sửa" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở lại", "AdsList", null, new { @class = "btn btn-outline-dark" })
    </div>
</div>
